{
   "Resources" : {
      "DBSecurityGroup" : {
         "Type" : "AWS::EC2::SecurityGroup",
         "Properties" : {
            "SecurityGroupIngress" : {
               "FromPort" : "5432",
               "ToPort" : "5432",
               "IpProtocol" : "tcp",
               "SourceSecurityGroupId" : {
                  "Ref" : "AppServerSecurityGroupId"
               }
            },
            "SecurityGroupEgress" : {
               "CidrIp" : "0.0.0.0/0",
               "IpProtocol" : "tcp",
               "FromPort" : "5432",
               "ToPort" : "5432"
            },
            "VpcId" : {
               "Ref" : "VPCId"
            },
            "GroupDescription" : "Security group for RDS DB Instance."
         }
      },
      "MyDBSubnetGroup" : {
         "Type" : "AWS::RDS::DBSubnetGroup",
         "Properties" : {
            "SubnetIds" : {
               "Ref" : "Subnets"
            },
            "DBSubnetGroupDescription" : "Subnets available for the RDS DB Instance"
         }
      },
      "MyDB" : {
         "Type" : "AWS::RDS::DBInstance",
         "Properties" : {
            "DBInstanceClass" : {
               "Ref" : "DBClass"
            },
            "Engine" : {
               "Ref" : "Engine"
            },
            "MasterUsername" : {
               "Ref" : "DBUsername"
            },
            "EngineVersion" : {
               "Ref" : "EngineVersion"
            },
            "DBSubnetGroupName" : {
               "Ref" : "MyDBSubnetGroup"
            },
            "VPCSecurityGroups" : [
               {
                  "Ref" : "DBSecurityGroup"
               }
            ],
            "MultiAZ" : "false",
            "AllocatedStorage" : {
               "Ref" : "DBAllocatedStorage"
            },
            "MasterUserPassword" : {
               "Ref" : "DBPassword"
            },
            "DBName" : {
               "Ref" : "DBName"
            }
         }
      }
   },
   "Description" : "AWS CloudFormation Sample Template VPC_RDS_DB_Instance: Sample template showing how to create an RDS DBInstance in an existing Virtual Private Cloud (VPC). **WARNING** This template creates an Amazon Relational Database Service database instance. You will be billed for the AWS resources used if you create a stack from this template.",
   "AWSTemplateFormatVersion" : "2010-09-09",
   "Outputs" : {
      "DBUsername" : {
         "Value" : {
            "Ref" : "DBUsername"
         },
         "Description" : "DBUsername"
      },
      "DBPortNumber" : {
         "Description" : "PortNumber",
         "Value" : {
            "Fn::GetAtt" : [
               "MyDB",
               "Endpoint.Address"
            ]
         }
      },
      "DBPassword" : {
         "Value" : {
            "Ref" : "DBPassword"
         },
         "Description" : "DBPassword"
      }
   },
   "Parameters" : {
      "DBUsername" : {
         "Default" : "admin",
         "AllowedPattern" : "[a-zA-Z][a-zA-Z0-9]*",
         "MinLength" : 1,
         "NoEcho" : true,
         "ConstraintDescription" : "must begin with a letter and contain only alphanumeric characters.",
         "MaxLength" : 16,
         "Type" : "String",
         "Description" : "The database admin account username"
      },
      "DBAllocatedStorage" : {
         "ConstraintDescription" : "must be between 5 and 1024Gb.",
         "MinValue" : 5,
         "MaxValue" : 1024,
         "Description" : "The size of the database (Gb)",
         "Default" : "5",
         "Type" : "Number"
      },
      "DBName" : {
         "MinLength" : 1,
         "ConstraintDescription" : "must begin with a letter and contain only alphanumeric characters.",
         "Description" : "The database name",
         "AllowedPattern" : "[a-zA-Z][a-zA-Z0-9]*",
         "Default" : "MyDatabase",
         "MaxLength" : 64,
         "Type" : "String"
      },
      "AppServerSecurityGroupId" : {
         "Type" : "String",
         "Description" : "App server security group id"
      },
      "DBPassword" : {
         "MinLength" : 8,
         "ConstraintDescription" : "must contain only alphanumeric characters.",
         "NoEcho" : true,
         "AllowedPattern" : "[a-zA-Z0-9]*",
         "Default" : "password",
         "Description" : "The database admin account password",
         "MaxLength" : 41,
         "Type" : "String"
      },
      "DBClass" : {
         "Type" : "String",
         "AllowedValues" : [
            "db.m1.large",
            "db.m1.medium",
            "db.m1.small",
            "db.m1.xlarge",
            "db.m2.2xlarge",
            "db.m2.4xlarge",
            "db.m2.xlarge",
            "db.m3.2xlarge",
            "db.m3.large",
            "db.m3.medium",
            "db.m3.xlarge",
            "db.m4.10xlarge",
            "db.m4.2xlarge",
            "db.m4.4xlarge",
            "db.m4.large",
            "db.m4.xlarge",
            "db.r3.2xlarge",
            "db.r3.4xlarge",
            "db.r3.8xlarge",
            "db.r3.large",
            "db.r3.xlarge",
            "db.t1.micro",
            "db.t2.large",
            "db.t2.medium",
            "db.t2.micro",
            "db.t2.small"
         ],
         "Default" : "db.t2.micro",
         "Description" : "Database instance class",
         "ConstraintDescription" : "must select a valid database instance type."
      },
      "VPCId" : {
         "Type" : "String",
         "Description" : "VPCId of your existing Virtual Private Cloud (VPC)"
      },
      "Subnets" : {
         "Type" : "CommaDelimitedList",
         "Description" : "The list of SubnetIds, for at least two Availability Zones in the region in your Virtual Private Cloud (VPC)"
      },
      "Engine" : {
         "Default" : "postgres",
         "Description" : "DB Engine",
         "AllowedValues" : [
            "MySQL",
            "aurora",
            "mariadb",
            "oracle-ee",
            "oracle-se",
            "oracle-se1",
            "postgres",
            "sqlserver-ee",
            "sqlserver-ex",
            "sqlserver-se",
            "sqlserver-web"
         ],
         "Type" : "String"
      },
      "EngineVersion" : {
         "Default" : "9.5.2",
         "Description" : "Engine Version",
         "Type" : "String"
      }
   }
}
